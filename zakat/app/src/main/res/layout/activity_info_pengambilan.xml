<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".amil.request.InfoPengambilanActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Detail Pengambilan Zakat"/>
    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E4E4E4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Pengambilan Zakat"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/tvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Nomor Pengambilan"
                android:layout_margin="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btnkonfirmasi"
                    android:backgroundTint="#2CB6F4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    app:cornerRadius="50dp"
                    android:text="Edit"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zakat yang di ambil"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvtipezakat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipe Zakat"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:id="@+id/tvJZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Zakat"
                android:layout_margin="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tiljumlahnishob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jumlah Nishob"
                android:layout_margin="10dp"
                android:visibility="gone">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etjumlahnishob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tvjumlahnishob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Nishob"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tiltotalzakat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total Zakat"
                android:layout_margin="10dp"
                android:visibility="gone">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ettotalzakat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvtlz"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Zakat"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Pengambilan"
                android:layout_margin="10dp"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:id="@+id/tvnamamuzakki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Muzakki"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/tvnomormuzakki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Muzakki"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tvalamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Muzakki"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Status Pengambilan"
                android:layout_margin="10dp"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:id="@+id/tvstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status Pengambilan"
                android:layout_margin="10dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnupdate"
        android:backgroundTint="#2CB6F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        app:cornerRadius="50dp"
        android:text="Terima Request"/>
</RelativeLayout>